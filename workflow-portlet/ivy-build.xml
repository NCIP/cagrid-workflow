<project xmlns:ivy="antlib:org.apache.ivy.ant">

	<property name="caGrid.dir" value="/Users/sulakhe/cagrid/1.3/release-1.3/cagrid-1-0/caGrid" />
	
    <taskdef resource="org/apache/ivy/ant/antlib.xml" uri="antlib:org.apache.ivy.ant">
        <classpath>
            <fileset dir="${portlet.lib.dir}" includes="ivy-*.jar" />
        </classpath>
    </taskdef>
   

    <property name="ivy.settings.url" value="http://software.cagrid.org/repository-1.3/ivysettings.xml" />
    
    
    <ivy:settings id="ivy.instance" url="${ivy.settings.url}" override="true" />
<!--

	<property name="repository.dir" location="${caGrid.dir}/repository" />
	<property name="integration.repository.dir" location="${caGrid.dir}/integration-repository" />
	<ivy:settings id="ivy.instance" file="${caGrid.dir}/antfiles/ivy/ivysettings.xml" override="true" />


    -->
    <target name="ivy-resolve">
        <ivy:retrieve type="jar" pattern="${portlet.ext.lib.dir}/[artifact]-[revision].[ext]"/>
    </target>

    <target name="ivy-report" depends="ivy-resolve">
        <ivy:report todir="${portlet.build.dir}" />
    </target>

    <target name="ivy-clean">
        <delete includeemptydirs="true" failonerror="false">
            <fileset dir="${portlet.ext.lib.dir}">
                <include name="**/*" />
            </fileset>
        </delete>
        <ivy:cleancache />
    </target>


</project>